<%- include header %>

<ul class="archive col-md-8 col-md-offset-1 col-xs-12">
	<% var lastYear = 0 %>
	<% posts.forEach(function(post,index){ %>
		<% if(lastYear != post.time.year){ %> 
			<li><h3><%= post.time.year %></h3></li>
		<% lastYear = post.time.year} %>
			<li><time><%= post.time.day %></time></li>
			<li><a href="/p/<%= post._id %>"><%= post.title %></a></li>
	<% }) %>
</ul>
<div class="col-md-3 col-xs-10">
        <div class=" col-xs-12">
                <%- include category %>
        </div>
        <div class="col-xs-12">
                <%- include hotblog %>
        </div>
</div>

<%- include footer %>
